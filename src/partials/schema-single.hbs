<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Article",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{url}}"
  },
  "headline": "{{ title }}",
  "image": [
    "{{base_url}}images/mycrypto-logo-banner.png"
  ],
  "datePublished": "{{ date_published }}",
  "dateModified": "{{ date_modified }}",
  "author": {
    "@type": "Organization",
    "name": "MyCrypto"
  },
  "publisher": {
    "@type": "Organization",
    "name": "MyCrypto",
    "logo": {
      "@type": "ImageObject",
      "url": "{{base_url}}images/mycrypto-logo-schema.png"
    }
  },
  "description": "{{description}}"
}
</script>
